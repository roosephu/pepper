{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "object-literal-sort-keys": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "variable-name": [true, "allow-leading-underscore"],
    "max-classes-per-file": [true, 10]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
