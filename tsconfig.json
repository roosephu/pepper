{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "no-shadowed-variables": false,
    "paths": {
      "@/*": ["src/renderer/*"],
      "*": ["node_modules/*"]
    }
  },
  "lib": [ "es2017.object", "ES2015" ],
  "include": [
    "src/**/*"
  ]
}
